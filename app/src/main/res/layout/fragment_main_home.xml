<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_blue_dark">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivLogo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/logo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/bold"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivLogo"
        app:layout_constraintStart_toEndOf="@+id/ivLogo"
        app:layout_constraintTop_toTopOf="@+id/ivLogo" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvSearch"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/blue_dark_400"
        app:cardCornerRadius="1000dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/blue_800"
        app:strokeWidth="2dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_search" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvSort"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        app:cardBackgroundColor="@color/blue_dark_300"
        app:cardCornerRadius="1000dp"
        app:layout_constraintBottom_toBottomOf="@+id/cvSearch"
        app:layout_constraintEnd_toStartOf="@+id/cvSearch"
        app:layout_constraintTop_toTopOf="@+id/cvSearch"
        app:strokeColor="@color/blue_800"
        app:strokeWidth="2dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_group" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvProfile"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        app:cardBackgroundColor="@color/blue_dark_300"
        app:cardCornerRadius="1000dp"
        app:layout_constraintBottom_toBottomOf="@+id/cvSort"
        app:layout_constraintEnd_toStartOf="@+id/cvSort"
        app:layout_constraintTop_toTopOf="@+id/cvSort"
        app:strokeColor="@color/blue_800"
        app:strokeWidth="2dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_user" />
    </com.google.android.material.card.MaterialCardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSlider"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpSlider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/vgIndicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/cvSlider"
        app:layout_constraintStart_toStartOf="@+id/cvSlider"
        app:layout_constraintTop_toBottomOf="@+id/cvSlider">

        <androidx.cardview.widget.CardView
            android:layout_width="12dp"
            android:layout_height="4dp"
            app:cardBackgroundColor="@color/blue_100"
            app:cardCornerRadius="2dp" />

        <Space
            android:layout_width="4dp"
            android:layout_height="0dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="4dp"
            android:layout_height="4dp"
            app:cardBackgroundColor="@color/blue_100"
            app:cardCornerRadius="2dp" />

        <Space
            android:layout_width="4dp"
            android:layout_height="0dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="4dp"
            android:layout_height="4dp"
            app:cardBackgroundColor="@color/blue_100"
            app:cardCornerRadius="2dp" />

        <Space
            android:layout_width="4dp"
            android:layout_height="0dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="4dp"
            android:layout_height="4dp"
            app:cardBackgroundColor="@color/blue_100"
            app:cardCornerRadius="2dp" />

        <Space
            android:layout_width="4dp"
            android:layout_height="0dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="4dp"
            android:layout_height="4dp"
            app:cardBackgroundColor="@color/blue_100"
            app:cardCornerRadius="2dp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRecentlyViewed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bold"
        android:text="@string/recently_viewed"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vgIndicators" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRecents"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toBottomOf="@+id/tvRecentlyViewed" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGenres"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/app_name"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/cvMoviesSeries"
        app:layout_constraintTop_toBottomOf="@+id/rvRecents"
        tools:listitem="@layout/adapter_recycler_movie_serie_genre" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvMoviesSeries"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/blue_dark_300"
        app:cardCornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeColor="@color/blue_800"
        app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <custom_views.MyButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/blue_dark_300"
                app:cardCornerRadius="20dp"
                app:font="@font/regular"
                app:text="@string/movies"
                app:textSize="16sp" />

            <custom_views.MyButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/blue_dark_300"
                app:cardCornerRadius="20dp"
                app:showBackground="false"
                app:text="@string/series"
                app:textSize="16sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>